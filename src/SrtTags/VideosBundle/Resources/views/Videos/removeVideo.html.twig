{% extends "SrtTagsVideosBundle::layout.html.twig" %}

{% block title %}
	{{ parent() }} - Supprimer un fichier vidéo
{% endblock %}

{% block videos_content_title %}Supprimer un fichier vidéo{% endblock %}

{% block videos_content %}

	<p>Êtes-vous sûr de vouloir supprimer le fichier vidéo "{{ video.title }}" ?</p>
	<p>(Cela supprimera également les séquences associées)</p>

	<form action="{{ path('srttagsvideos_removeVideo', {'id': video.id}) }}" method="post">
		<a href="{{ path('srttagsvideos_listVideos') }}" class="btn">Annuler</a>
		<input type="submit" class="btn btn-danger" value="Supprimer" />
		{{ form_rest(form) }}
	</form>
{% endblock %}
